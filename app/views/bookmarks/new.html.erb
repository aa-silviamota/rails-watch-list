<h1>Add a New Bookmark</h1>

<%= form_with model: [@list, @bookmark], local: true do |form| %>
  <div class="field">
    <%= form.label :movie_id, "Select Movie" %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title, prompt: "Choose a movie" %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <div class="actions">
    <%= form.submit 'Add Bookmark' %>
  </div>
<% end %>

<%= link_to 'Back to List', list_path(@list) %>
